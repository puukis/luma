module @std.io

// Standard I/O module for Luma
// This is part of the standard library

open def println(x) {
  print(x)
  print("\n")
}

// Reads a line from stdin.
// native def input()
open def input() {
    return ""
}

// Prompts the user and returns their input.
open def ask(prompt) {
    print(prompt + " ")
    return input()
}

open def log(msg) {
  print("[LOG] ")
  print(msg)
}

closed def internal_helper() {
  // This is not exported
  print("internal")
}
